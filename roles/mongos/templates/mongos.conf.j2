systemLog:
  destination: file
  logAppend: true
  path: /var/log/mongodb/mongos.log
processManagement:
  fork: true
  pidFilePath: /var/run/mongodb/mongos.pid
net:
  port: 27017
  bindIp: {{ ansible_default_ipv4.address }},127.0.0.1
security:
  keyFile: /home/mongodb/key

sharding:
  configDB: rs0/{% for node_ip in groups['config-secondary'] %}{{ node_ip }}:27017{% if not loop.last %},{% endif %}{% endfor %}